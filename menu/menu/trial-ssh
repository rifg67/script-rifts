echo " pasword  : ${Pass}"
echo " limit ip : ${iplimit}"
echo " Domain   : ${domain}"
echo " Port Udp : 1-65535 "
echo " Port WS  : 80,8880,2082,8080"
echo " Port Tls : 443,8443 "
echo " OpenSSH  : 22,143 "
echo " OVPN Tls : 443 "
echo " Ovpn UdP : 2200 "
echo " Ovpn Tcp : 443 "
baris_panjang
}

# Payload Detail 
function Payload_Details(){
