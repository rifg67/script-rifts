#!/bin/bash

# Fungsi untuk membersihkan layar
clear_screen() {
    clear
}

# Warna untuk output
yellow="\033[0;33m"
ungu="\033[0;35m"
Red="\033[91;1m"
Xark="\033[0m"
BlueCyan="\033[5;36m"
WhiteBe="\033[5;37m"
GreenBe="\033[5;32m"
YellowBe="\033[5;33m"
BlueBe="\033[5;34m"

# Getting
MYIP=$(curl -sS ipv4.icanhazip.com)
ISP=$(cat /etc/xray/isp 2>/dev/null)
CITY=$(cat /etc/xray/city 2>/dev/null)
domain=$(cat /etc/xray/domain 2>/dev/null)
nama=$(cat /etc/xray/username 2>/dev/null)

# Default masaaktif (jika tidak di-set)
masaaktif=${masaaktif:-30}

#Tanggal Expired
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")


# Garis pemisah
baris_panjang() {
    echo -e "${BlueCyan} ——————————————————————————————————— ${Xark}"
}

# Banner
Xwan_Banner() {
    clear_screen
    baris_panjang
    echo -e "${ungu}           $nama      ${Xark}"
    baris_panjang
}

# Credit script
Sc_Credit() {
    sleep 1
    baris_panjang
    echo -e "${ungu}  Terimakasih Telah Menggunakan ${Xark}"
    echo -e "${ungu}          Script Credit ${Xark}"
    echo -e "${ungu}          $nama ${Xark}"
    baris_panjang
    echo ""
    read -rp "Press any key to continue..."

}

# Daftar member VMess
Daftar_Member_Vmess() {
    baris_panjang
    echo ""
    if [ -f "/etc/xray/config.json" ]; then
        grep -E "^### " "/etc/xray/config.json" | cut -d ' ' -f 2-3 | column -t | sort | uniq | lolcat
    else
        echo "File config.json tidak ditemukan!"
    fi
    echo ""
    baris_panjang
    echo ""
}

# Cek konfigurasi VMess
Cek_Config_Vmess() {
    read -rp "Input Username : " user
    if [ -z "$user" ]; then
        echo -e "User Tidak Ditemukan!!!"
        read -n 1 -s -r -p "Enter Back To Menu"
        return 1
    fi

    # Variabel konfigurasi
    iplimit=$(cat /etc/kyt/limit/vless/ip/"$user" 2>/dev/null)
    Quota1=$(cat /etc/vless/"$user" 2>/dev/null)
    Quota=$((Quota1 / 1024 / 1024 / 1024))
    uuid=$(grep -Po '"id":\s*"\K[^"]+' /etc/xray/config.json | head -n 1)
    exp=$(grep -E "^### " "/etc/xray/config.json" | grep -i " $user " | awk '{print $3}' | uniq)

    if [ -z "$uuid" ] || [ -z "$exp" ]; then
        echo "User $user tidak ditemukan di config.json!"
        return 1
    fi

    # Generate link VMess
    asu=$(cat <<EOF
{
    "v": "2",
    "ps": "${user}",
    "add": "${domain}",
    "port": "443",
    "id": "${uuid}",
    "aid": "0",
    "net": "ws",
    "path": "/vmess",
    "type": "none",
    "host": "${domain}",
    "tls": "tls"
}
EOF
)
    ask=$(cat <<EOF
{
    "v": "2",
    "ps": "${user}",
    "add": "${domain}",
    "port": "80",
    "id": "${uuid}",
    "aid": "0",
    "net": "ws",
    "path": "/vmess",
    "type": "none",
    "host": "${domain}",
    "tls": "none"
}
EOF
)
    grpc=$(cat <<EOF
{
    "v": "2",
    "ps": "${user}",
    "add": "${domain}",
    "port": "443",
    "id": "${uuid}",
    "aid": "0",
    "net": "grpc",
    "path": "vmess-grpc",
    "type": "none",
    "host": "${domain}",
    "tls": "tls"
}
EOF
)

    vmesslink1="vmess://$(echo "$asu" | base64 -w 0)"
    vmesslink2="vmess://$(echo "$ask" | base64 -w 0)"
    vmesslink3="vmess://$(echo "$grpc" | base64 -w 0)"
}

# Mendapatkan konfigurasi bot
# Mendapatkan konfigurasi bot
get_bot_config() {
    if [ -f "/etc/bot/.bot.db" ]; then
        # Ambil semua baris bot, kolom ke-2 TOKEN, kolom ke-3 CHATID
        KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | head -n1 | awk '{print $2}')
        CHATIDS=$(grep -E "^#bot# " "/etc/bot/.bot.db" | awk '{print $3}')
    else 
        CHATIDS=""
        KEY=""
    fi
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"
}

# Kirim notifikasi Telegram
send_telegram_notification() {
    local TEXT="<b>------------------------------</b>
<b>      XRAY/VMESS</b>
<b>------------------------------</b>
<code>Remarks   : ${user}
Domain    : ${domain}
Quota     : ${Quota} GB
Limit IP  : ${iplimit} Devices
Port TLS  : 400-900
Port NTLS : 80, 8080, 8081-9999
id        : ${uuid}
alterId   : 0
Security  : auto
network   : ws or grpc
Path      : /Multi-Path
Dynamic   : https://bugmu.com/path
Name      : vmess-grpc</code>
<b>------------------------------</b>
<b> VMESS WS TLS</b>
<b>------------------------------</b>
<code>${vmesslink1}</code>
<b>------------------------------</b>
<b>VMESS WS NO TLS</b>
<b>------------------------------</b>
<code>${vmesslink2}</code>
<b>------------------------------</b>
<b> VMESS gRPC</b>
<b>------------------------------</b>
<code>${vmesslink3}</code>
<b>------------------------------</b>
<b>Format OpenClash :</b> https://${domain}:81/vmess-$user.txt
<b>------------------------------</b>
<b>Berakhir pada:</b> $exp
<b>------------------------------</b>"

    if [ -n "$KEY" ] && [ -n "$CHATIDS" ]; then
        for CHATID in $CHATIDS; do
            curl -s --max-time $TIME -d "chat_id=$CHATID" \
                 -d "disable_web_page_preview=1" \
                 -d "parse_mode=html" \
                 --data-urlencode "text=$TEXT" \
                 "$URL" >/dev/null
        done
    fi
}

# Detail akun
Details_Account() {
    baris_panjang
    echo -e "\033[37m VMESS XRAY \033[0m"
    baris_panjang
    echo -e " Remarks       : ${user}"
    echo -e " Domain        : ${domain}"
    echo -e " User Quota    : ${Quota} GB"
    echo -e " Port TLS      : 400,8443"
    echo -e " port WS       : 80,8880,8080,2082"
    echo -e " Key           : ${uuid}"
    echo -e " Localtions    : $CITY"
    echo -e " ISP           : $ISP"
    echo -e " AlterId       : 0"
    echo -e " Security      : auto"
    echo -e " Network       : ws"
    echo -e " Path          : /vmess"
    echo -e " Dynamic Path  : yourbug/vmess"
    echo -e " ServiceName   : vmess-grpc"
    echo -e "\033[0m"
}

# Link JSON
Link_Json() {
    baris_panjang
    echo -e " Link TLS      : ${vmesslink1}"
    baris_panjang
    echo -e " Link WS       : ${vmesslink2}"
    baris_panjang
    echo -e " Link GRPC     : ${vmesslink3}"
    baris_panjang
    echo -e " OpenClash     : https://${domain}:81/vmess-${user}.txt"
    baris_panjang
}

# Detail expiry
Details_Expiry() {
    echo -e "\033[33m Expiry        : $exp \033[0m"
    baris_panjang
}

# Main program
main() {
    get_bot_config
    Xwan_Banner
    echo "     "
    Daftar_Member_Vmess
    echo "     "
    Cek_Config_Vmess
    if [ $? -eq 0 ]; then
        clear_screen
        Details_Account
        Link_Json
        Details_Expiry
        send_telegram_notification
        Sc_Credit
    fi
}

# Jalankan program utama
main