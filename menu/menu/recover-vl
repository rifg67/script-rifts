#!/bin/bash

# Fungsi untuk membersihkan layar
clear_screen() {
    clear
}

# Warna untuk output
yellow="\033[0;33m"
ungu="\033[0;35m"
Red="\033[91;1m"
Xark="\033[0m"
BlueCyan="\033[5;36m"
WhiteBe="\033[5;37m"
GreenBe="\033[5;32m"
YellowBe="\033[5;33m"
BlueBe="\033[5;34m"

# Getting
MYIP=$(curl -sS ipv4.icanhazip.com)
ISP=$(cat /etc/xray/isp 2>/dev/null)
CITY=$(cat /etc/xray/city 2>/dev/null)
domain=$(cat /etc/xray/domain 2>/dev/null)
nama=$(cat /etc/xray/username 2>/dev/null)

# Default masaaktif (jika tidak di-set)
masaaktif=${masaaktif:-30}

#Tanggal Expired
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# Mendapatkan konfigurasi bot
get_bot_config() {
    if [ -f "/etc/bot/.bot.db" ]; then
        CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | awk '{print $3}')
        KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | awk '{print $2}')
    else
        CHATID=""
        KEY=""
    fi
    export TIME="10"
    export URL="https://api.telegram.org/bot$KEY/sendMessage"
}

# Garis pemisah
baris_panjang() {
    echo -e "${BlueCyan} ——————————————————————————————————— ${Xark}"
}

# Banner
Xwan_Banner() {
    clear_screen
    baris_panjang
    echo -e "${ungu}           $nama      ${Xark}"
    baris_panjang
}

# Credit script
Sc_Credit() {
    sleep 1
    baris_panjang
    echo -e "${ungu}  Terimakasih Telah Menggunakan ${Xark}"
    echo -e "${ungu}          Script Credit ${Xark}"
    echo -e "${ungu}          $nama ${Xark}"
    baris_panjang
    echo ""
    read -rp "Press any key to continue..."
}

# Daftar member VLESS
Daftar_Member_Vless() {
    baris_panjang
    echo ""
    if [ -f "/etc/xray/config.json" ]; then
        grep -E "^#& " "/etc/xray/config.json" | awk '{print $2,$3}' | column -t | sort | uniq | lolcat
    else
        echo "File config.json tidak ditemukan!"
    fi
    echo ""
    baris_panjang
    echo ""
}

# Cek konfigurasi VLESS
Cek_Config_Vless() {
    read -rp "Input Username : " user
    if [ -z "$user" ]; then
        echo -e "User Tidak Ditemukan!!!"
        read -n 1 -s -r -p "Enter Back To Menu"
        return 1
    fi

    # Variabel konfigurasi
    iplimit=$(cat /etc/kyt/limit/vless/ip/"$user" 2>/dev/null)
    Quota1=$(cat /etc/vless/"$user" 2>/dev/null)
    Quota=$((Quota1 / 1024 / 1024 / 1024))
    uuid=$(grep -Po '"id":\s*"\K[^"]+' /etc/xray/config.json | head -n 1)
    exp=$(grep -E "^#& " "/etc/xray/config.json" | grep -i " $user " | awk '{print $3}' | uniq)

    if [ -z "$uuid" ] || [ -z "$exp" ]; then
        echo "User $user tidak ditemukan di config.json!"
        return 1
    fi

    # Generate link VLESS
    vlesslink1="vless://${uuid}@${domain}:443?path=/vless&security=tls&encryption=none&type=ws#${user}"
    vlesslink2="vless://${uuid}@${domain}:80?path=/vless&encryption=none&type=ws#${user}"
    vlesslink3="vless://${uuid}@${domain}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&sni=${domain}#${user}"

    # export supaya bisa dipakai fungsi lain
    export user uuid Quota iplimit exp vlesslink1 vlesslink2 vlesslink3
    return 0
}

# Kirim notifikasi Telegram
# Mendapatkan konfigurasi bot
get_bot_config() {
    if [ -f "/etc/bot/.bot.db" ]; then
        # Ambil token dari baris pertama
        KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | head -n1 | awk '{print $2}')
        # Ambil semua chatid (bisa lebih dari satu baris)
        CHATIDS=$(grep -E "^#bot# " "/etc/bot/.bot.db" | awk '{print $3}')
    else
        CHATIDS=""
        KEY=""
    fi
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"
}

# Kirim notifikasi Telegram
send_telegram_notification() {
    local TEXT="<b>------------------------------</b>
<b>      XRAY/VLESS</b>
<b>------------------------------</b>
<code>Remarks   : ${user}
Domain    : ${domain}
Quota     : ${Quota} GB
Limit IP  : ${iplimit} Devices
Port TLS  : 400-900
Port NTLS : 80, 8080, 8081-9999
id        : ${uuid}
alterId   : 0
Security  : auto
network   : ws or grpc
Path      : /Multi-Path
Dynamic   : https://bugmu.com/path
Name      : vless-grpc</code>
<b>------------------------------</b>
<b>Link TLS</b>
<b>------------------------------</b>
<code>${vlesslink1}</code>
<b>------------------------------</b>
<b>Link none TLS</b>
<b>------------------------------</b>
<code>${vlesslink2}</code>
<b>------------------------------</b>
<b>Link GRPC</b>
<b>------------------------------</b>
<code>${vlesslink3}</code>
<b>------------------------------</b>
<b>Format OpenClash :</b> https://${domain}:81/vless-$user.txt
<b>------------------------------</b>
<b>Berakhir pada:</b> $exp
<b>------------------------------</b>"

    if [ -n "$KEY" ] && [ -n "$CHATIDS" ]; then
        for CHATID in $CHATIDS; do
            curl -s --max-time $TIME \
                 -d "chat_id=$CHATID" \
                 -d "disable_web_page_preview=1" \
                 -d "parse_mode=html" \
                 --data-urlencode "text=$TEXT" \
                 "$URL" >/dev/null
        done
    fi
}


# Detail akun
Details_Account() {
    baris_panjang
    echo -e "\033[37m VLESS XRAY \033[0m"
    baris_panjang
    echo -e ""
    echo -e "\033[37m Remarks     : ${user} "
    echo -e "\033[37m Domain      : ${domain}"
    echo -e "\033[37m User Quota  : ${Quota} GB"
    echo -e "\033[37m port TLS    : 443-900"
    echo -e "\033[37m port WS     : 80,8880,8080"
    echo -e "\033[37m User ID     : ${uuid}"
    echo -e "\033[37m Locations.  : $CITY"
    echo -e "\033[37m ISP         : $ISP"
    echo -e "\033[37m Encryption  : none"
    echo -e "\033[37m Path TLS    : /vless "
    echo -e "\033[37m ServiceName : vless-grpc"
}

# Link JSON
Link_Json() {
    baris_panjang
    echo -e "\033[37m Link TLS    : ${vlesslink1}"
    baris_panjang
    echo -e "\033[37m Link NTLS   : ${vlesslink2}"
    baris_panjang
    echo -e "\033[37m Link GRPC   : ${vlesslink3}"
    baris_panjang
    echo -e "\033[37m OpenClash   : https://${domain}:81/vless-${user}.txt"
}

# Detail expiry
Details_Expiry() {
    baris_panjang
    echo -e "\033[33m Expiry     : $exp \033[0m "
}

# Main program
main() {
    get_bot_config
    Xwan_Banner
    echo "     "
    Daftar_Member_Vless
    echo "     "
    Cek_Config_Vless
    if [ $? -eq 0 ]; then
        clear_screen
        send_telegram_notification
        Details_Account
        Link_Json
        Details_Expiry
        Sc_Credit
    fi
}

# Jalankan program utama
main
