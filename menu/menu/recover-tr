#!/bin/bash

# Fungsi membersihkan layar
clear_screen() { clear; }

# Warna output
yellow="\033[0;33m"
ungu="\033[0;35m"
Red="\033[91;1m"
Xark="\033[0m"
BlueCyan="\033[5;36m"
WhiteBe="\033[5;37m"
GreenBe="\033[5;32m"
YellowBe="\033[5;33m"
BlueBe="\033[5;34m"

clear

# Getting
MYIP=$(curl -sS ipv4.icanhazip.com)
ISP=$(cat /etc/xray/isp 2>/dev/null)
CITY=$(cat /etc/xray/city 2>/dev/null)
domain=$(cat /etc/xray/domain 2>/dev/null)
nama=$(cat /etc/xray/username 2>/dev/null)

# Default masaaktif (jika tidak di-set)
masaaktif=${masaaktif:-30}

#Tanggal Expired
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# Tambahkan user ke config (jika perlu)
add_user_to_config() {
    local marker="$1"
    local user="$2"
    local exp="$3"
    local uuid="$4"
    if grep -q "$marker" /etc/xray/config.json; then
        sed -i '/'"$marker"'$/a\#! '"$user $exp"'\n},{"password": "'"$uuid"'","email": "'"$user"'"}' /etc/xray/config.json
    fi
}

# Ambil UUID asli dari user
get_user_uuid() {
    uuid=$(grep -A1 "^#! $user " /etc/xray/config.json | grep '"password"' | head -n1 | cut -d'"' -f4)
    if [ -z "$uuid" ]; then
        echo "UUID untuk user $user tidak ditemukan!"
        exit 1
    fi
}

# Ambil expiry asli dari config (hanya tanggal, tanpa username, tanpa duplikat)
get_user_exp() {
    exp=$(grep -E "^#! $user " /etc/xray/config.json \
        | awk '{print $3, $4, $5}' \
        | sort -u)

    if [ -z "$exp" ]; then
        # Jika tidak ada di config, gunakan masaaktif default
        exp=$(date -d "$masaaktif days" +"%d %b, %Y")
    fi
}

# Quota & limit
get_user_quota() {
    Quota1=$(cat /etc/trojan/"$user" 2>/dev/null || echo 0)
    Quota=$((Quota1 / 1024 / 1024 / 1024))
    iplimit=$(cat /etc/kyt/limit/trojan/ip/"$user" 2>/dev/null || echo "∞")
}

# Bot config
get_bot_config() {
    if [ -f "/etc/bot/.bot.db" ]; then
        CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
        KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
    else
        CHATID=""
        KEY=""
    fi
    export TIME="10"
    export URL="https://api.telegram.org/bot$KEY/sendMessage"
}

# Garis pemisah
baris_panjang() { echo -e "${BlueCyan}———————————————————————————————————${Xark}"; }

# Banner
Xwan_Banner() {
    clear_screen
    baris_panjang
    echo -e "${ungu}           $nama      ${Xark}"
    baris_panjang
}

# Credit script
Sc_Credit() {
    sleep 1
    baris_panjang
    echo -e "${ungu}  Terimakasih Telah Menggunakan ${Xark}"
    echo -e "${ungu}          Script Credit ${Xark}"
    echo -e "${ungu}          $nama ${Xark}"
    baris_panjang
    echo ""
    read -rp "Press any key to continue..."
}

# Daftar member Trojan
Daftar_Member_Trojan() {
    baris_panjang
    echo ""
    if [ -f "/etc/xray/config.json" ]; then
        grep -E "^#! " "/etc/xray/config.json" | cut -d ' ' -f 2- | column -t | sort | uniq | lolcat
    else
        echo "File config.json tidak ditemukan!"
    fi
    echo ""
    baris_panjang
    echo ""
}

# Cek konfigurasi Trojan
Cek_Config_Trojan() {
    read -rp "Input Username : " user
    if [ -z "$user" ]; then
        echo -e "User Tidak Ditemukan!!!"
        read -n 1 -s -r -p "Enter Back To Menu"
        return 1
    fi

    get_user_uuid
    get_user_exp
    get_user_quota

    # Generate link Trojan
    trojanlink1="trojan://${uuid}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}"
    trojanlink="trojan://${uuid}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}"
    trojanlink2="trojan://${uuid}@${domain}:80?path=%2Ftrojan-ws&security=none&host=${domain}&type=ws#${user}"

    return 0
}

# Mendapatkan konfigurasi bot
get_bot_config() {
    if [ -f "/etc/bot/.bot.db" ]; then
        # Ambil token dari baris pertama
        KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | head -n1 | awk '{print $2}')
        # Ambil semua chatid (bisa lebih dari satu baris)
        CHATIDS=$(grep -E "^#bot# " "/etc/bot/.bot.db" | awk '{print $3}')
    else
        CHATIDS=""
        KEY=""
    fi
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"
}
# Kirim notifikasi Telegram
send_telegram_notification() {
    local TEXT="<b>-----------------------------------------</b>
<b>           XRAY / TROJAN</b>
<b>-----------------------------------------</b>
<code>Remarks   : ${user}
Domain    : ${domain}
Quota     : ${Quota} GB
Limit IP  : ${iplimit} Devices
Port TLS  : 400-900
Port NTLS : 80, 8080, 8081-9999
id        : ${uuid}
alterId   : 0
Security  : auto
Network   : ws / grpc
Path      : /Multi-Path
Dynamic   : https://bugmu.com/path
Name      : trojan-grpc</code>
<b>-----------------------------------------</b>
<b>Link WS</b>
<b>-----------------------------------------</b>
<code>${trojanlink}</code>
<b>-----------------------------------------</b>
<b>Link gRPC</b>
<b>-----------------------------------------</b>
<code>${trojanlink1}</code>
<b>-----------------------------------------</b>
<b>Format OpenClash :</b> https://${domain}:81/trojan-${user}.txt
<b>-----------------------------------------</b>
<b>Berakhir pada:</b> $exp
<b>-----------------------------------------</b>"

    if [ -n "$KEY" ] && [ -n "$CHATIDS" ]; then
        for CHATID in $CHATIDS; do
            curl -s --max-time $TIME \
                 -d "chat_id=$CHATID" \
                 -d "disable_web_page_preview=1" \
                 -d "parse_mode=html" \
                 --data-urlencode "text=$TEXT" \
                 "$URL" >/dev/null
        done
    fi
}

# Detail akun
Details_Account() {
    baris_panjang
    echo -e "\033[37m TROJAN XRAY \033[0m"
    baris_panjang
    echo -e "\033[37m Remarks      : ${user} \033[0m" 
    echo -e "\033[37m Host/IP      : ${domain} \033[0m"
    echo -e "\033[37m User Quota   : ${Quota} GB \033[0m"
    echo -e "\033[37m User Ip      : ${iplimit} IP \033[0m"
    echo -e "\033[37m Port NTLS    : 443-900 \033[0m" 
    echo -e "\033[37m port WS      : 80,8880,8080 \033[0m"
    echo -e "\033[37m Key          : ${uuid} \033[0m"
    echo -e "\033[37m ISP          : $ISP \033[0m"
    echo -e "\033[37m Path         : /trojan-ws \033[0m" 
    echo -e "\033[37m ServiceName  : trojan-grpc \033[0m"
    baris_panjang
}

# Link JSON
Link_Json() {
    echo -e "\033[37m Link WS     : ${trojanlink} \033[0m" 
    baris_panjang
    echo -e "\033[37m Link TLS    : ${trojanlink2} \033[0m" 
    baris_panjang 
    echo -e "\033[37m Link GRPC   : ${trojanlink1} \033[0m" 
    baris_panjang
    echo -e "\033[37m OpenClash   : https://${domain}:81/trojan-${user}.txt \033[0m" 
}

# Detail expiry
Details_Expiry() {
    baris_panjang
    echo -e "\033[33m Expiry     : $exp \033[0m "
}

# Main program
main() {
    get_bot_config
    Xwan_Banner
    echo "     "
    Daftar_Member_Trojan
    echo "     "
    Cek_Config_Trojan
    if [ $? -eq 0 ]; then
        clear_screen
        send_telegram_notification
        Details_Account
        Link_Json
        Details_Expiry
        Sc_Credit
    fi
}

# Jalankan program utama
main
