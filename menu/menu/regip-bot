sudo apt install pip
apt install unzip
apt install neofetch -y
cd /usr/bin
clear
pip install requests python-telegram-bot==13.7
clear
cd

figlet "PEYX" | lolcat
echo -e "\033[1;36mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m"
